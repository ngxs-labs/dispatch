{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2015",
    "types": [],
    "lib": ["dom", "es2018"],
    "declaration": true,
    "inlineSources": true,
    "declarationMap": false
  },
  "angularCompilerOptions": {
    "enableIvy": false,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "enableResourceInlining": true
  },
  "exclude": ["**/*.spec.ts"],
  "include": ["**/*.ts"]
}
